set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT="$(git rev-parse --show-toplevel)"
cd ${REPO_ROOT}

pushd dev/tools/controllerbuilder
./generate-proto.sh
popd

# For efficiency, we generate CRDs only once at the end
export SKIP_GENERATE_CRDS=1

for f in $(find apis -name "generate.sh"); do
    # Skip some generate.sh scripts that are not up to date
    # TODO: Fix these!

    if [[ "${f}" == *"backupdr"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"bigquerybiglake"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"bigtable"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"composer"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"datastream"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"discoveryengine"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"documentai"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"edgecontainer"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"gkebackup"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"orgpolicy"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"speech"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"tpu"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"vertexai"* ]]; then
        echo "Skipping ${f}"
        continue
    fi
    if [[ "${f}" == *"vmwareengine"* ]]; then
        echo "Skipping ${f}"
        continue
    fi

    echo "running ${f}"
    ./${f}
done

# Now we generate CRDs
unset SKIP_GENERATE_CRDS
echo "Generating CRDs"
dev/tasks/generate-crds