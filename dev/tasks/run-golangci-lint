set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT="$(git rev-parse --show-toplevel)"
cd ${REPO_ROOT}

# Check if golangci-lint is installed locally
if command -v golangci-lint &> /dev/null; then
    golangci-lint run -v --timeout=10m
else
    echo "golangci-lint not found, running via make lint (requires docker)..."
    make lint
fi
