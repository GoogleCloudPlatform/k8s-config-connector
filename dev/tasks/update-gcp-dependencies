#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT=$(git rev-parse --show-toplevel)
cd ${REPO_ROOT}

# Newer client libraries
for dep in $(grep cloud.google.com/go go.mod | awk '{print $1}'); do
  dev/tasks/update-dependency ${dep}
done

# Older client libraries
dev/tasks/update-dependency google.golang.org/api

dev/tasks/update-dependency google.golang.org/genproto
dev/tasks/update-dependency google.golang.org/genproto/googleapis/api
dev/tasks/update-dependency google.golang.org/genproto/googleapis/rpc
