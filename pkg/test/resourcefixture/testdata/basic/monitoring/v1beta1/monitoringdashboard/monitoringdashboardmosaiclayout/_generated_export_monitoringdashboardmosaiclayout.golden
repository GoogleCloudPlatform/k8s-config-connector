apiVersion: monitoring.cnrm.cloud.google.com/v1beta1
kind: MonitoringDashboard
metadata:
  name: ${dashboardID}
spec:
  displayName: monitoringdashboard-mosaiclayout
  mosaicLayout:
    columns: 12
    tiles:
    - height: 1
      widget:
        id: singleViewGroupWidget1
        singleViewGroup: {}
        title: SingleViewGroup Widget
      width: 12
    - height: 1
      widget:
        sectionHeader:
          dividerBelow: true
          subtitle: Example SectionHeader
        title: SectionHeader Widget
      width: 12
      yPos: 1
    - height: 1
      widget:
        collapsibleGroup:
          collapsed: true
        title: CollapsibleGroup Widget
      width: 12
      yPos: 2
    - height: 1
      widget:
        text:
          content: CollapsibleGroup content
          format: MARKDOWN
          style: {}
      width: 12
      yPos: 2
    - height: 1
      widget:
        alertChart:
          alertPolicyRef:
            external: projects/${projectId}/alertPolicies/${alertPolicyID}
        title: AlertChart Widget
      width: 12
      yPos: 3
    - height: 1
      widget:
        errorReportingPanel:
          projectRefs:
          - external: projects/project1
          - external: projects/project2
          services:
          - foo
          - bar
          versions:
          - v1
        title: ErrorReporting Widget
      width: 12
      yPos: 4
    - height: 1
      widget:
        incidentList:
          monitoredResources:
          - labels:
              instance_id: "12345678901234"
              project_id: my-project
              zone: us-central1-a
            type: gce_instance
          policyRefs:
          - external: alertPolicies/${alertPolicyID}
        title: IncidentList Widget
      width: 12
      yPos: 5
  projectRef:
    external: ${projectId}