apiVersion: run.cnrm.cloud.google.com/v1beta1
kind: RunJob
metadata:
  name: runjob-${uniqueId}
spec:
  launchStage: GA
  location: us-central1
  projectRef:
    external: ${projectId}
  template:
    taskCount: 1
    template:
      containers:
      - image: us-docker.pkg.dev/cloudrun/container/hello
        name: container-name
        resources:
          limits:
            cpu: 1000m
            memory: 512Mi
        volumeMounts:
        - mountPath: /cloudsql-new-path
          name: cloudsql
      executionEnvironment: EXECUTION_ENVIRONMENT_GEN2
      maxRetries: 3
      serviceAccountRef:
        external: ${projectNumber}-compute@developer.gserviceaccount.com
      timeout: 10m0s
      volumes:
      - cloudSqlInstance:
          instanceRefs:
          - external: ${projectId}:us-central1:sqlinstance-1-${uniqueId}
          - external: ${projectId}:us-central1:sqlinstance-2-${uniqueId}
        name: cloudsql