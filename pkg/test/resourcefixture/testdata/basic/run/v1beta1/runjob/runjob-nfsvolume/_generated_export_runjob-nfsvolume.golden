apiVersion: run.cnrm.cloud.google.com/v1beta1
kind: RunJob
metadata:
  name: runjob-${uniqueId}
spec:
  launchStage: GA
  location: us-central1
  projectRef:
    external: ${projectId}
  template:
    taskCount: 1
    template:
      containers:
      - image: us-docker.pkg.dev/cloudrun/container/hello
        resources:
          limits:
            cpu: 1000m
            memory: 512Mi
        volumeMounts:
        - mountPath: /mnt/nfs
          name: nfsvolume
      executionEnvironment: EXECUTION_ENVIRONMENT_GEN2
      maxRetries: 3
      serviceAccountRef:
        external: ${projectNumber}-compute@developer.gserviceaccount.com
      timeout: 10m0s
      volumes:
      - name: nfsvolume
        nfs:
          path: /exports/share-updated
          server: 10.0.0.2